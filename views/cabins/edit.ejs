<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= cabin.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/cabins/<%= cabin._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="cabin[name]" value="<%= cabin.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="cabin[image]" value="<%= cabin.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="cabin[description]" value="<%= cabin.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/cabin">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>

