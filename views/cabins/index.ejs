<% include ../partials/header %> 

 <div class="container">
     <header class="jumbotron">
         <div class="container">
             <h1>Welcome To CabinHub!</h1>
             <p>View our hand-picked cabins from all over the world</p>
             <p>
                <a class="btn btn-primary btn-large" href="/cabins/new">Add New Cabin</a>
             </p>
         </div>
     </header>
     
     <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% cabins.forEach(function(cabin){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                   <img src="<%= cabin.image %>">
                   <div class="caption">
                       <h4><%= cabin.name %></h4>
                   </div>
                   <p>
                       <a href="/cabins/<%= cabin._id %>" class="btn btn-primary">More Info</a>
                   </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<% include ../partials/footer %>
